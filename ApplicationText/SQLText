CREATE TABLE USER(
    UserID INT AUTO_INCREMENT,
    UserName NVARCHAR(150),
    Password TEXT,
    Active BIT DEFAULT TRUE,
    Created_Date CHAR(17),
    Modified_Date CHAR(17),
    CONSTRAINT PK_USER PRIMARY KEY (UserID)
);

CREATE TABLE ROLE(
    RoleID INT AUTO_INCREMENT,
    RoleName NVARCHAR(20),
    CONSTRAINT PK_ROLE PRIMARY KEY (RoleID)
);

CREATE TABLE USER_ROLE(
    ID INT AUTO_INCREMENT,
    UserID INT,
    RoleID INT,
    CONSTRAINT PK_USER_ROLE PRIMARY KEY (ID),
    CONSTRAINT FK_USER_ROLE FOREIGN KEY (UserID) REFERENCES USER(UserID),
    CONSTRAINT FK_ROLE_USER FOREIGN KEY (RoleID) REFERENCES ROLE(RoleID)
);
ALTER TABLE user_role AUTO_INCREMENT = 6;

CREATE TABLE categories(
    CategoryID INT AUTO_INCREMENT,
    CategoryName NVARCHAR(150),
    Created_Date CHAR(17),
    Modified_Date CHAR(17),
    CONSTRAINT PK_CATEGORIES PRIMARY KEY (CategoryID)
);

CREATE TABLE sub_categories(
    SUB_CategoryID INT AUTO_INCREMENT,
    CategoryName NVARCHAR(150),
    Created_Date CHAR(17),
    Modified_Date CHAR(17),
    CategoryID INT,
    CONSTRAINT PK_SUB_CATEGORIES PRIMARY KEY (SUB_CategoryID),
    CONSTRAINT FK_SUB_CATEGORIES FOREIGN KEY (CategoryID) REFERENCES CATEGORIES(CategoryID)
)
